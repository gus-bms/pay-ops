// prisma/schema.prisma

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mysql"
  url      = env("DATABASE_URL")
}

enum PaymentStatus {
  CREATED      // 요청 접수
  REJECTED     // 차단/거절로 종료 (PG 호출 없음)
  RISK_REVIEW  // (다음 단계) 보류
  PROCESSING   // (다음 단계) PG 호출 중
  SUCCEEDED
  FAILED
  CANCELED
}

enum RiskDecision {
  ALLOW
  HOLD
  BLOCK
}

enum RejectReason {
  AMOUNT_NOT_ALLOWED // plan 가격표와 불일치(변조 의심)
  PLAN_NOT_FOUND
  PLAN_INACTIVE
}

model Plan {
  id        String   @id @default(cuid())
  name      String   @unique
  amount    Int      // KRW 기준 "원"
  currency  String   @default("KRW")
  isActive  Boolean  @default(true)

  payments  Payment[]

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  @@index([isActive])
}

model Payment {
  id              String        @id @default(cuid())
  
  requestedPlanId String
  
  planId          String?
  plan            Plan?         @relation(fields: [planId], references: [id])

  // 서버 산정 금액 (클라이언트 금액 신뢰 금지)
  amount          Int
  currency        String        @default("KRW")

  status          PaymentStatus @default(CREATED)

  // 차단/보류 판단 결과(이번 스텝에서는 BLOCK만 사용)
  riskDecision  RiskDecision  @default(ALLOW)
  rejectReason  RejectReason?

  // 요청 추적용(선택)
  idempotencyKey String?      @db.VarChar(128)

  createdAt     DateTime      @default(now())
  updatedAt     DateTime      @updatedAt

  @@index([requestedPlanId, createdAt])
  @@index([planId, createdAt])
  @@index([status, createdAt])
}

enum UserRole {
  USER
  ADMIN
}

enum OAuthProvider {
  GOOGLE
  KAKAO
}

model User {
  id        String   @id @default(cuid())
  name      String
  email     String   @unique
  role      UserRole @default(USER)

  passwordHash String?  @db.VarChar(255) // MVP: 이메일/비번 로그인용 (OAuth 도입 후에도 유지 가능)
  
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  refreshTokens  RefreshToken[]
  socialAccount  SocialAccount?
}

model RefreshToken {
  id              String   @id @default(cuid())
  userId          String
  tokenHash       String   @unique
  expiresAt       DateTime

  revokedAt         DateTime?
  replacedByTokenId String?
  createdAt         DateTime @default(now())
  lastUsedAt        DateTime?

  userAgent       String?
  ip              String?

  user            User @relation(fields: [userId], references: [id], onDelete: Cascade)

  replacedBy      RefreshToken? @relation("RefreshTokenRotation", fields: [replacedByTokenId], references: [id])
  replaces        RefreshToken[] @relation("RefreshTokenRotation")

  @@index([userId])
  @@index([expiresAt])
  @@index([revokedAt])
}

model SocialAccount {
  id              String        @id @default(cuid())
  userId          String        @unique

  provider        OAuthProvider
  providerUserId  String

  accessToken     String?
  refreshToken    String?
  scope           String?
  expiresAt       DateTime?

  createdAt       DateTime @default(now())
  updatedAt       DateTime @updatedAt

  user            User @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@unique([provider, providerUserId])
}